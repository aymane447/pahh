<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}TicketFlow - Gestion de Tickets{% endblock %}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    {% block stylesheets %}{% endblock %}
    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}

    <style>
    :root {
        --primary: #38bdf8;
        --secondary: #2563eb;
        --bg-dark: #020617;
        --card-bg: rgba(255, 255, 255, 0.05);
        --text-main: #f8fafc;
        --text-muted: #94a3b8;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
    }

    body {
        background-color: var(--bg-dark);
        color: var(--text-main);
        overflow-x: hidden;
    }

    nav {
        position: fixed;
        top: 0;
        left: 0;
        height: 75px; 
        width: 100%;
        padding: 0 5%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        backdrop-filter: blur(12px);
        background: rgba(2, 6, 23, 0.8);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        z-index: 1000;
    }

    nav h2 {
        font-weight: 700;
        letter-spacing: -0.5px;
        color: var(--primary);
        font-size: 1.5rem;
    }

    .nav-links {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .nav-links a {
        color: var(--text-main);
        text-decoration: none;
        font-size: 0.95rem;
        font-weight: 500;
        transition: all 0.3s;
        padding: 8px 12px;
        border-radius: 8px;
    }

    .nav-links a:hover {
        color: var(--primary);
        background: rgba(56, 189, 248, 0.1);
    }

    .nav-links a.active {
        color: var(--primary);
    }

    .btn-logout {
        background: rgba(239, 68, 68, 0.1);
        color: #fca5a5 !important;
        border: 1px solid rgba(239, 68, 68, 0.2);
    }

    .btn-logout:hover {
        background: rgba(239, 68, 68, 0.2) !important;
        color: #ef4444 !important;
    }

    /* ===== MAIN CONTENT ===== */
    .main-content {
        padding-top: 75px;
        min-height: 100vh;
        width: 100%;
    }

    /* Container for standard pages (Dashboard, Lists, etc.) */
    .container {
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 0;
    }

    /* Standard Card Style */
    .card {
        background: var(--card-bg);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 24px;
        backdrop-filter: blur(5px);
    }
    </style>
</head>

<body>

<nav>
    <h2>Ticket<span style="color:#fff">Flow</span></h2>
    <div class="nav-links">
        <a href="{{ path('app_home') }}">Home</a>
        <a href="{{ path('app_dashboard') }}">Dashboard</a>
        <a href="{{ path('app_tick') }}">Tickets</a>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_utili') }}">Utilisateurs</a>
            <a href="{{ path('app_cate') }}">Cat√©gories</a>
        {% endif %}
        {% if app.user %}
        <div style="position: relative; margin-right: 15px;">
            <a href="{{ path('app_tick') }}" style="color: var(--text-main); font-size: 1.2rem; background: none; padding: 0;" id="notif-bell">
                <i class="fas fa-bell"></i>
            </a>
            <span id="unread-dot" style="display: none; position: absolute; top: -5px; right: -5px; width: 10px; height: 10px; background: #ef4444; border-radius: 50%; border: 2px solid var(--bg-dark);"></span>
        </div>
        <div style="display: flex; align-items: center; gap: 10px;">
            <img src="{{ app.user.profilePicture ? asset('uploads/profiles/' ~ app.user.profilePicture) : 'https://ui-avatars.com/api/?name=' ~ app.user.nom ~ '+' ~ app.user.prenom ~ '&background=6366f1&color=fff&size=32' }}" 
                 style="width: 32px; height: 32px; border-radius: 50%; object-fit: cover;">
            <span style="color: var(--text-muted); font-size: 0.85rem;">
                <a href="{{ path('app_profile') }}" style="color: inherit; text-decoration: none;">{{ app.user.nom }} {{ app.user.prenom }}</a>
            </span>
        </div>
        <a href="{{ path('app_logout') }}" class="btn-logout">Quitter</a>
        {% else %}
            <a href="{{ path('app_login') }}">Connexion</a>
        {% endif %}
    </div>
</nav>

<script>
    function updateNotifications() {
        fetch('{{ path('app_notifications_unread') }}')
            .then(response => response.json())
            .then(data => {
                const dot = document.getElementById('unread-dot');
                if (data.count > 0) {
                    dot.style.display = 'block';
                } else {
                    dot.style.display = 'none';
                }
            });
    }

    if (document.getElementById('unread-dot')) {
        updateNotifications();
        setInterval(updateNotifications, 30000); // Check every 30s
    }
</script>

<div class="main-content">
    {% block body %}{% endblock %}
</div>

</body>
</html>
