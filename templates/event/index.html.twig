{% extends 'base.html.twig' %}

{% block title %}Événements{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Événements à venir</h1>
        {% if is_granted('ROLE_AGENT') or is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_event_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Créer un événement
            </a>
        {% endif %}
    </div>

    <div class="row">
        {% for event in events %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    {% if event.image %}
                        <img src="{{ asset('uploads/events/' ~ event.image) }}" class="card-img-top" alt="{{ event.titre }}" style="height: 200px; object-fit: cover;">
                    {% else %}
                         <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <span class="text-muted">Pas d'image</span>
                        </div>
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ event.titre }}</h5>
                        <p class="card-text text-muted">
                            <i class="fas fa-calendar-alt"></i> {{ event.dateDebut|date('d/m/Y') }} <br>
                            <i class="fas fa-map-marker-alt"></i> {{ event.lieu }}
                        </p>
                        <p class="card-text">{{ event.description|slice(0, 100) }}...</p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="h5 text-primary mb-0">{{ event.prix }} MAD</span>
                            <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-outline-primary">Voir détails</a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">Aucun événement pour le moment.</div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
