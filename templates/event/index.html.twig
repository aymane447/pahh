{% extends 'base.html.twig' %}

{% block title %}Événements - TicketFlow{% endblock %}

{% block body %}
<!-- Hero Section -->
<div class="position-relative overflow-hidden mb-5 py-5" style="background: radial-gradient(circle at top right, rgba(56, 189, 248, 0.15), transparent), radial-gradient(circle at bottom left, rgba(37, 99, 235, 0.1), transparent);">
    <div class="container py-5 text-center animate-fade-in">
        <span class="badge rounded-pill bg-primary bg-opacity-10 text-primary px-3 py-2 mb-3 border border-primary border-opacity-25" style="letter-spacing: 2px;">DÉCOUVREZ</span>
        <h1 class="display-3 fw-bold text-gradient mb-4">Événements Inoubliables</h1>
        <p class="lead text-muted mx-auto" style="max-width: 700px;">Explorez les meilleures expériences, des concerts aux conférences, le tout en un seul endroit.</p>
        
        {% if is_granted('ROLE_AGENT') or is_granted('ROLE_ADMIN') %}
            <div class="mt-5">
                <a href="{{ path('app_event_new') }}" class="btn btn-primary btn-lg rounded-pill px-5 py-3 shadow-lg hover-lift">
                    <i class="fas fa-plus-circle me-2"></i> Créer une annonce
                </a>
            </div>
        {% endif %}
    </div>
</div>

<div class="container pb-5">
    <div class="d-flex justify-content-between align-items-end mb-5">
        <div>
            <h2 class="fw-bold h3 mb-1">Annonces à la une</h2>
            <div class="bg-primary" style="width: 50px; height: 4px; border-radius: 2px;"></div>
        </div>
        <div class="text-muted small">Affichage de {{ events|length }} événements</div>
    </div>

    <div class="row g-4">
        {% for event in events %}
            <div class="col-xl-4 col-md-6 animate-fade-in" style="animation-delay: {{ loop.index * 0.1 }}s;">
                <div class="card h-100 glass-effect border-0 hover-lift overflow-hidden">
                    <div class="position-relative overflow-hidden" style="height: 250px;">
                        {% if event.image %}
                            <img src="{{ asset('uploads/events/' ~ event.image) }}" class="w-100 h-100 event-img" alt="{{ event.titre }}" style="object-fit: cover; transition: transform 0.6s ease;">
                        {% else %}
                             <div class="w-100 h-100 glass-effect d-flex align-items-center justify-content-center">
                                <i class="fas fa-image fa-3x text-muted opacity-25"></i>
                            </div>
                        {% endif %}
                        
                        <!-- Floating Badges -->
                        <div class="position-absolute top-0 start-0 p-3">
                            <div class="glass-effect text-white px-3 py-1 rounded-pill small fw-bold" style="backdrop-filter: blur(8px);">
                                <i class="fas fa-calendar-alt text-primary me-2"></i>{{ event.dateDebut|date('d M') }}
                            </div>
                        </div>
                        <div class="position-absolute bottom-0 end-0 p-3">
                            <div class="premium-gradient text-white px-4 py-2 rounded-4 shadow-lg fw-bold">
                                {{ event.prix }} MAD
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-body p-4">
                        <h5 class="card-title fw-bold mb-3 text-white">{{ event.titre }}</h5>
                        <div class="d-flex align-items-center gap-3 text-muted small mb-4">
                            <span class="d-flex align-items-center gap-1"><i class="fas fa-map-marker-alt text-primary"></i> {{ event.lieu }}</span>
                            <span class="d-flex align-items-center gap-1"><i class="fas fa-clock"></i> {{ event.dateDebut|date('H:i') }}</span>
                        </div>
                        
                        <p class="text-muted small mb-4" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; line-height: 1.6;">
                            {{ event.description }}
                        </p>
                        
                        <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-outline-light border-opacity-10 w-100 py-3 rounded-4 fw-600 stretched-link" style="transition: 0.3s;">
                            Découvrir l'événement
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 py-5 text-center">
                <div class="glass-effect p-5 rounded-5 border-dashed" style="border: 2px dashed rgba(255,255,255,0.1) !important;">
                    <i class="fas fa-calendar-times fa-4x mb-4 text-muted opacity-25"></i>
                    <h3 class="fw-bold">Aucun événement disponible</h3>
                    <p class="text-muted">La scène est vide pour le moment. Revenez bientôt !</p>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<style>
    .event-card:hover .event-img {
        transform: scale(1.1);
    }
    .btn-outline-light:hover {
        background: rgba(255,255,255,0.05) !important;
        border-color: var(--primary) !important;
        color: var(--primary) !important;
    }
</style>
{% endblock %}
