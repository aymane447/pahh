{% extends 'base.html.twig' %}

{% block title %}Événements{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Événements à venir</h1>
        {% if is_granted('ROLE_AGENT') or is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_event_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Créer un événement
            </a>
        {% endif %}
    </div>

    <div class="row">
        {% for event in events %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0 event-card" style="overflow: hidden; transition: all 0.3s;">
                    <div style="position: relative;">
                        {% if event.image %}
                            <img src="{{ asset('uploads/events/' ~ event.image) }}" class="card-img-top" alt="{{ event.titre }}" style="height: 220px; object-fit: cover; transition: transform 0.5s;">
                        {% else %}
                             <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 220px;">
                                <span class="text-muted"><i class="fas fa-image fa-2x"></i></span>
                            </div>
                        {% endif %}
                        <div style="position: absolute; top: 15px; right: 15px; background: rgba(0,0,0,0.7); color: white; padding: 5px 12px; border-radius: 20px; font-weight: 600; font-size: 0.85rem; backdrop-filter: blur(5px);">
                            {{ event.prix }} MAD
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <div class="text-primary mb-2" style="font-size: 0.85rem; font-weight: 600; text-transform: uppercase; letter-spacing: 1px;">
                            {{ event.dateDebut|date('d M Y') }}
                        </div>
                        <h5 class="card-title mb-3" style="font-weight: 700;">{{ event.titre }}</h5>
                        <p class="card-text text-muted mb-4">
                            <i class="fas fa-map-marker-alt me-2"></i> {{ event.lieu }}
                        </p>
                        <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-outline-primary w-100 stretched-link" style="border-radius: 10px;">Voir les détails</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info text-center p-5" style="background: rgba(56, 189, 248, 0.1); border: 1px solid rgba(56, 189, 248, 0.2); color: white; border-radius: 16px;">
                    <i class="fas fa-info-circle fa-2x mb-3 text-primary"></i><br>
                    <h3>Aucun événement prévu</h3>
                    <p class="mb-0">Revenez plus tard pour découvrir nos prochaines annonces.</p>
                </div>
            </div>
        {% endfor %}
    </div>

    <style>
        .event-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.3) !important;
            border-color: var(--primary) !important;
        }
        .event-card:hover img {
            transform: scale(1.05);
        }
    </style>
</div>
{% endblock %}
