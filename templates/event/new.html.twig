{% extends 'base.html.twig' %}

{% block title %}Nouvel Événement{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Créer un nouvel événement</h1>

    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-8">
                {{ form_row(form.titre) }}
                {{ form_row(form.description) }}
                
                <div class="row">
                    <div class="col-md-6">{{ form_row(form.date_debut) }}</div>
                    <div class="col-md-6">{{ form_row(form.date_fin) }}</div>
                </div>

                {{ form_row(form.lieu) }}
                {{ form_row(form.prix) }}
                {{ form_row(form.image) }}

                <button class="btn btn-success mt-3"><i class="fas fa-save"></i> Enregistrer</button>
                <a href="{{ path('app_event_index') }}" class="btn btn-secondary mt-3">Retour</a>
            </div>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
