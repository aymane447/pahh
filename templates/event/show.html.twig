{% extends 'base.html.twig' %}

{% block title %}{{ event.titre }} - TicketFlow{% endblock %}

{% block body %}
<div class="position-fixed top-0 start-0 w-100 h-100 d-none d-lg-block" style="z-index: -1; opacity: 0.05; background: url('{{ asset('uploads/events/' ~ event.image) }}') center/cover no-repeat; filter: blur(50px);"></div>

<div class="container py-5 animate-fade-in">
    <nav aria-label="breadcrumb" class="mb-5">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="{{ path('app_event_index') }}" class="text-primary text-decoration-none small">Events</a></li>
            <li class="breadcrumb-item active text-white small" aria-current="page">{{ event.titre }}</li>
        </ol>
    </nav>

    <div class="row g-5">
        <!-- Event Media -->
        <div class="col-lg-6">
            <div class="position-sticky" style="top: 100px;">
                <div class="glass-effect rounded-5 overflow-hidden shadow-2xl p-2">
                    <div class="rounded-5 overflow-hidden" style="aspect-ratio: 1/1.2;">
                        {% if event.image %}
                            <img src="{{ asset('uploads/events/' ~ event.image) }}" class="w-100 h-100" style="object-fit: cover;" alt="{{ event.titre }}">
                        {% else %}
                            <div class="w-100 h-100 glass-effect d-flex align-items-center justify-content-center">
                                <i class="fas fa-image fa-6x text-muted opacity-10"></i>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Event Content -->
        <div class="col-lg-6">
            <div class="ps-lg-4">
                <span class="badge rounded-pill premium-gradient px-3 py-2 mb-4 shadow-sm border-0">ÉVÉNEMENT SPÉCIAL</span>
                <h1 class="display-3 fw-bold text-white mb-4">{{ event.titre }}</h1>
                
                <div class="d-flex align-items-center gap-4 mb-5 text-white">
                    <div class="d-flex align-items-center gap-2">
                        <i class="fas fa-user-circle text-primary"></i>
                        <span class="small">{{ event.createur.nom }} {{ event.createur.prenom }}</span>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <i class="fas fa-clock text-primary"></i>
                        <span class="small">Publié {{ event.dateDebut|date('d/m/Y') }}</span>
                    </div>
                </div>

                <div class="row g-4 mb-5">
                    <div class="col-sm-6">
                        <div class="glass-effect p-4 rounded-4 h-100 d-flex flex-column justify-content-center">
                            <i class="fas fa-calendar-alt text-primary mb-3 h4"></i>
                            <h6 class="fw-bold text-white mb-1">Date & Heure</h6>
                            <p class="text-white small mb-0">{{ event.dateDebut|date('d M Y') }} à {{ event.dateDebut|date('H:i') }}</p>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="glass-effect p-4 rounded-4 h-100 d-flex flex-column justify-content-center">
                            <i class="fas fa-map-marked-alt text-primary mb-3 h4"></i>
                            <h6 class="fw-bold text-white mb-1">Lieu</h6>
                            <p class="text-white small mb-0">{{ event.lieu }}</p>
                        </div>
                    </div>
                </div>

                <div class="mb-5">
                    <h5 class="fw-bold text-white mb-4 pb-2 border-bottom border-white border-opacity-10 d-inline-block">Détails de l'événement</h5>
                    <p class="text-white leading-relaxed" style="white-space: pre-line; font-size: 1.1rem;">{{ event.description }}</p>
                </div>

                <!-- Booking Card -->
                <div class="glass-effect p-5 rounded-5 border-primary border-opacity-10 shadow-3xl">
                    <div class="d-flex justify-content-between align-items-center mb-5">
                        <div class="lh-sm">
                            <span class="text-white small text-uppercase fw-bold">Accès Premium</span>
                            <h5 class="fw-bold text-white mb-0">Billet Standard</h5>
                        </div>
                        <div class="text-end">
                            <span class="display-6 fw-bold text-primary">{{ event.prix }}</span>
                            <span class="text-primary small fw-bold">MAD</span>
                        </div>
                    </div>

                    {% if is_granted('ROLE_CLIENT') %}
                        <form action="{{ path('app_event_buy', {'id': event.id}) }}" method="post" onsubmit="return confirm('Confirmer la réservation ?');">
                            <button type="submit" class="btn btn-primary w-100 py-3 rounded-pill fw-bold shadow-lg hover-lift">
                                <i class="fas fa-bolt me-2"></i> RÉSERVER MAINTENANT
                            </button>
                        </form>
                    {% elseif is_granted('ROLE_AGENT') or is_granted('ROLE_ADMIN') %}
                        <div class="d-flex flex-column gap-3">
                            {% if is_granted('ROLE_ADMIN') or (is_granted('ROLE_AGENT') and event.createur == app.user) %}
                                <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-outline-primary py-3 rounded-pill fw-bold hover-lift">
                                    <i class="fas fa-edit me-2"></i> MODIFIER L'ÉVÉNEMENT
                                </a>
                                <a href="{{ path('app_event_delete', {'id': event.id}) }}" class="btn btn-outline-danger py-3 rounded-pill fw-bold hover-lift" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');">
                                    <i class="fas fa-trash me-2"></i> SUPPRIMER L'ÉVÉNEMENT
                                </a>
                            {% else %}
                                <div class="p-3 glass-effect rounded-4 text-center border-info border-opacity-25 opacity-75">
                                    <i class="fas fa-info-circle text-info me-2"></i>
                                    <span class="text-info small fw-bold text-uppercase">Lecture seule (Créé par {{ event.createur.nom }})</span>
                                </div>
                            {% endif %}
                        </div>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-outline-primary btn-lg w-100 py-3 rounded-pill fw-bold shadow-lg hover-lift">
                            Connectez-vous pour continuer
                        </a>
                    {% endif %}
                    
                    <p class="text-white text-center mt-4 mb-0 small">
                        <i class="fas fa-lock me-1"></i> Transaction sécurisée par TicketFlow
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .shadow-3xl {
        box-shadow: 0 40px 100px -20px rgba(0, 0, 0, 0.5);
    }
    .leading-relaxed {
        line-height: 1.8;
    }
</style>
{% endblock %}
