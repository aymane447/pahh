    background-position: center;
}

.hero-content {
    max-width: 600px;
    animation: slideLeft 1.5s;
}

.hero h1 {
    font-size: 3.5em;
    margin-bottom: 20px;
}

.hero span {
    color: #38bdf8;
}

.hero p {
    line-height: 1.6;
    opacity: 0.9;
}

.hero button {
    margin-top: 30px;
    padding: 14px 30px;
    background: linear-gradient(135deg, #38bdf8, #2563eb);
    border: none;
    border-radius: 30px;
    color: white;
    font-size: 1em;
    cursor: pointer;
    transition: transform 0.3s;
}

.hero button:hover {
    transform: scale(1.05);
}

/* ===== SECTIONS ===== */
