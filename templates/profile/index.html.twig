{% extends 'base.html.twig' %}

{% block title %}Mon Profil - TicketFlow{% endblock %}

{% block body %}
<div class="container">
    <div style="max-width: 600px; margin: 0 auto;">
        <h1 style="font-size: 2.2rem; font-weight: 700; margin-bottom: 10px;">Mon Profil</h1>
        
        <div style="display: flex; align-items: center; gap: 25px; margin-bottom: 30px; background: rgba(255,255,255,0.02); padding: 20px; border-radius: 20px; border: 1px solid rgba(255,255,255,0.05);">
            <div style="position: relative;">
                <img src="{{ app.user.profilePicture ? asset('uploads/profiles/' ~ app.user.profilePicture) : 'https://ui-avatars.com/api/?name=' ~ app.user.nom ~ '+' ~ app.user.prenom ~ '&background=6366f1&color=fff&size=128' }}" 
                     alt="Avatar" style="width: 100px; height: 100px; border-radius: 50%; object-fit: cover; border: 3px solid var(--primary);">
            </div>
            <div>
                <h2 style="font-size: 1.4rem; margin: 0;">{{ app.user.nom }} {{ app.user.prenom }}</h2>
                <p style="color: var(--text-muted); margin: 5px 0 0 0;">{{ app.user.email }}</p>
                <span style="font-size: 0.75rem; background: var(--primary); padding: 2px 10px; border-radius: 10px; margin-top: 8px; display: inline-block;">{{ app.user.roles[0]|replace({'ROLE_': ''}) }}</span>
            </div>
        </div>

        {% for message in app.flashes('success') %}
            <div style="background: rgba(34, 197, 94, 0.1); color: #4ade80; padding: 15px; border-radius: 12px; margin-bottom: 20px; border: 1px solid rgba(34, 197, 94, 0.2);">
                {{ message }}
            </div>
        {% endfor %}

        <div class="card">
            {{ form_start(form) }}
                <style>
                    .form-group { margin-bottom: 20px; }
                    .form-group label { display: block; margin-bottom: 8px; font-weight: 500; font-size: 0.9rem; }
                    input, select { 
                        width: 100%; padding: 12px; background: rgba(15, 23, 42, 0.6); 
                        border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 10px; 
                        color: white; font-size: 1rem; transition: border-color 0.3s;
                        margin-bottom: 5px;
                    }
                    input:focus, select:focus { outline: none; border-color: var(--primary); }
                    .btn-submit {
                        width: 100%; padding: 14px; background: var(--primary); 
                        border: none; border-radius: 12px; color: white; 
                        font-weight: 600; cursor: pointer; transition: transform 0.2s;
                    }
                </style>

                <div class="form-group">
                    <label>Photo de profil</label>
                    {{ form_widget(form.profile_picture_file) }}
                    <small style="color: var(--text-muted); font-size: 0.8rem;">Formats acceptés : JPG, PNG. Taille max : 1Mo.</small>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                    <div class="form-group">
                        <label>Nom</label>
                        {{ form_widget(form.nom) }}
                    </div>
                    <div class="form-group">
                        <label>Prénom</label>
                        {{ form_widget(form.prenom) }}
                    </div>
                </div>

                <div class="form-group">
                    <label>Adresse E-mail</label>
                    {{ form_widget(form.email) }}
                </div>

                <div class="form-group">
                    <label>Nom d'utilisateur</label>
                    {{ form_widget(form.id_utilisateur) }}
                </div>

                <div class="form-group">
                    <label>Nouveau Mot de passe (Laissez vide pour ne pas changer)</label>
                    {{ form_widget(form.plainPassword) }}
                </div>

                <button type="submit" class="btn-submit">Mettre à jour mon profil</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
