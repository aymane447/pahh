{% extends 'base.html.twig' %}

{% block title %}{{ form.vars.value.id ? 'Modifier' : 'Nouveau' }} Ticket - TicketFlow{% endblock %}

{% block body %}
<div class="container mt-4" style="max-width: 800px;">
    <div class="card p-5">
        <div class="mb-5">
            <a href="{{ path('app_tick') }}" class="text-muted text-decoration-none mb-3 d-inline-block">
                <i class="fas fa-arrow-left me-2"></i> Retour à la liste
            </a>
            <h1 class="fw-bold">
                {{ form.vars.value.id ? 'Modifier le Ticket #' ~ form.vars.value.id : 'Ouvrir un nouveau Ticket' }}
            </h1>
            <p class="text-muted">Partagez les détails de votre demande pour obtenir une assistance rapide.</p>
        </div>

        {{ form_start(form) }}
            
            <div class="mb-4">
                {{ form_label(form.titre, 'Sujet du Ticket') }}
                {{ form_widget(form.titre, {'attr': {'placeholder': 'Ex: Problème d\'accès au compte'}}) }}
                {{ form_errors(form.titre) }}
            </div>

            <div class="row">
                <div class="col-md-6 mb-4">
                    {{ form_label(form.priorite) }}
                    {{ form_widget(form.priorite) }}
                    {{ form_errors(form.priorite) }}
                </div>
                <div class="col-md-6 mb-4">
                    {{ form_label(form.id_categorie, 'Catégorie') }}
                    {{ form_widget(form.id_categorie) }}
                    {{ form_errors(form.id_categorie) }}
                </div>
            </div>

            <div class="mb-4">
                {{ form_label(form.description, 'Description détaillée') }}
                {{ form_widget(form.description, {'attr': {'rows': 6, 'placeholder': 'Décrivez votre problème ici...'}}) }}
                {{ form_errors(form.description) }}
            </div>

            {% if form.statut is defined %}
                <div class="mb-4">
                    {{ form_label(form.statut) }}
                    {{ form_widget(form.statut) }}
                    {{ form_errors(form.statut) }}
                </div>
            {% endif %}

            {% if form.id_client is defined %}
                <div class="mb-4">
                    {{ form_label(form.id_client, 'Client') }}
                    {{ form_widget(form.id_client) }}
                    {{ form_errors(form.id_client) }}
                </div>
            {% endif %}

            {% if form.id_agent is defined %}
                <div class="mb-4">
                    {{ form_label(form.id_agent, 'Agent assigné') }}
                    {{ form_widget(form.id_agent) }}
                    {{ form_errors(form.id_agent) }}
                </div>
            {% endif %}

            <div class="mt-5">
                <button type="submit" class="btn btn-primary w-100 py-3 rounded-pill fw-bold">
                    <i class="fas fa-paper-plane me-2"></i> {{ form.vars.value.id ? 'Mettre à jour le ticket' : 'Envoyer le ticket' }}
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
