{% extends 'base.html.twig' %}

{% block title %}Tickets - TicketFlow{% endblock %}

{% block body %}
<div class="container py-5">
    <!-- Header Section -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-4 mb-5">
        <div>
            <h1 class="display-5 fw-bold mb-1">Tickets</h1>
            <p class="text-muted mb-0">Gérez et suivez vos demandes de support.</p>
        </div>
        {% if is_granted('ROLE_AGENT') or is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_tick_ajou') }}" class="btn btn-primary px-4 py-2 rounded-pill shadow-sm">
                <i class="fas fa-plus me-2"></i> Nouveau Ticket
            </a>
        {% endif %}
    </div>

    <!-- Filters Section -->
    <div class="glass-card mb-5 p-4 rounded-4 shadow-lg">
        <form action="{{ path('app_tick') }}" method="GET" class="row g-3 align-items-end">
            <div class="col-lg-4 col-md-6">
                <label class="form-label">Recherche</label>
                <div class="input-group">
                    <span class="input-group-text bg-transparent border-end-0" style="border-radius: 12px 0 0 12px; border-color: rgba(255,255,255,0.1);">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <input type="text" name="q" value="{{ filters.q }}" class="form-control border-start-0" style="border-radius: 0 12px 12px 0;" placeholder="Titre, description...">
                </div>
            </div>
            <div class="col-lg-2 col-md-6">
                <label class="form-label">Catégorie</label>
                <select name="category" class="form-select">
                    <option value="">Toutes</option>
                    {% for cat in categories %}
                        <option value="{{ cat.id }}" {{ filters.category == cat.id ? 'selected' }}>{{ cat.nom }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-lg-2 col-md-6">
                <label class="form-label">Statut</label>
                <select name="statut" class="form-select">
                    <option value="">Tous</option>
                    <option value="Ouvert" {{ filters.statut == 'Ouvert' ? 'selected' }}>Ouvert</option>
                    <option value="En cours" {{ filters.statut == 'En cours' ? 'selected' }}>En cours</option>
                    <option value="Résolu" {{ filters.statut == 'Résolu' ? 'selected' }}>Résolu</option>
                </select>
            </div>
            <div class="col-lg-2 col-md-6">
                <label class="form-label">Priorité</label>
                <select name="priorite" class="form-select">
                    <option value="">Toutes</option>
                    <option value="Basse" {{ filters.priorite == 'Basse' ? 'selected' }}>Basse</option>
                    <option value="Moyenne" {{ filters.priorite == 'Moyenne' ? 'selected' }}>Moyenne</option>
                    <option value="Haute" {{ filters.priorite == 'Haute' ? 'selected' }}>Haute</option>
                </select>
            </div>
            <div class="col-lg-2 d-flex gap-2">
                <button type="submit" class="btn btn-primary flex-grow-1 rounded-pill">Filtrer</button>
                {% if filters.q or filters.category or filters.statut or filters.priorite %}
                    <a href="{{ path('app_tick') }}" class="btn btn-outline-secondary rounded-circle p-2 d-flex align-items-center justify-content-center" style="width: 42px; height: 42px;" title="Réinitialiser">
                        <i class="fas fa-undo"></i>
                    </a>
                {% endif %}
            </div>
        </form>
        <div class="mt-3 small text-muted">
            <i class="fas fa-list-ul me-2"></i> {{ tickets|length }} ticket(s) trouvé(s)
        </div>
    </div>

    <!-- Tickets List Table -->
    <div class="card overflow-hidden border-0 shadow-lg rounded-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" style="background: transparent;">
                <thead style="background: rgba(255, 255, 255, 0.02); color: var(--text-muted); font-size: 0.8rem; text-transform: uppercase; letter-spacing: 1px;">
                    <tr>
                        <th class="ps-4">ID</th>
                        <th>Titre & Description</th>
                        <th>Statut</th>
                        <th>Priorité</th>
                        <th>Créé le</th>
                        <th class="pe-4 text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for t in tickets %}
                    <tr class="ticket-row" style="cursor: pointer;" onclick="window.location.href='{{ path('app_tick_show', {'id': t.id}) }}'">
                        <td class="ps-4">
                            <span class="badge bg-primary bg-opacity-10 text-primary fw-bold">#{{ t.id }}</span>
                        </td>
                        <td style="min-width: 300px;">
                            <div class="d-flex align-items-center gap-2">
                                <span class="fw-bold text-white">{{ t.titre }}</span>
                                {% if t.hasUnreadMessagesFor(app.user) %}
                                    <span class="badge bg-danger rounded-pill pulse-animation">Nouveau</span>
                                {% endif %}
                                {% if t.event %}
                                    <span class="badge bg-info bg-opacity-10 text-info rounded-pill" style="font-size: 0.7rem;">
                                        <i class="fas fa-ticket-alt me-1"></i> Événement
                                    </span>
                                {% endif %}
                            </div>
                            <div class="small text-muted text-truncate" style="max-width: 250px;">{{ t.description|slice(0, 60) }}...</div>
                        </td>
                        <td>
                            {% set status_class = t.statut == 'Ouvert' ? 'bg-success' : (t.statut == 'En cours' ? 'bg-warning' : 'bg-secondary') %}
                            <span class="badge {{ status_class }} bg-opacity-10 text-{{ status_class|split('-')[1] }} rounded-pill border border-{{ status_class|split('-')[1] }} border-opacity-25 px-3 py-2" style="font-size: 0.7rem;">
                                {{ t.statut|upper }}
                            </span>
                        </td>
                        <td>
                            {% set priority_class = t.priorite|lower == 'haute' ? 'text-danger' : (t.priorite|lower == 'moyenne' ? 'text-warning' : 'text-info') %}
                            <div class="d-flex align-items-center gap-2 {{ priority_class }}" style="font-size: 0.85rem; font-weight: 600;">
                                <i class="fas fa-circle" style="font-size: 0.6rem;"></i>
                                {{ t.priorite }}
                            </div>
                        </td>
                        <td>
                            <div class="small text-muted">{{ t.dateCreation ? t.dateCreation|date('d M Y') : 'N/A' }}</div>
                        </td>
                        <td class="pe-4 text-end" onclick="event.stopPropagation();">
                            <div class="btn-group shadow-sm">
                                <a href="{{ path('app_tick_show', {'id': t.id}) }}" class="btn btn-sm btn-outline-light border-opacity-10 px-3" title="Voir">
                                    <i class="fas fa-eye"></i>
                                </a>
                                {% if is_granted('ROLE_ADMIN') or (is_granted('ROLE_AGENT') and t.createur == app.user) %}
                                    <a href="{{ path('app_tick_mod', {'id': t.id}) }}" class="btn btn-sm btn-outline-light border-opacity-10 px-3" title="Modifier">
                                        <i class="fas fa-edit text-primary"></i>
                                    </a>
                                    <a href="{{ path('app_tick_sup', {'id': t.id}) }}" class="btn btn-sm btn-outline-light border-opacity-10 px-3" onclick="return confirm('Supprimer ce ticket ?')" title="Supprimer">
                                        <i class="fas fa-trash text-danger"></i>
                                    </a>
                                {% endif %}
                                {% if is_granted('ROLE_CLIENT') and t.idClient is null %}
                                     <a href="{{ path('app_tick_acheter', {'id': t.id}) }}" class="btn btn-sm btn-warning fw-bold px-3">Acheter</a>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="py-5 text-center text-muted">
                            <div class="opacity-50">
                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                <p>Aucun ticket trouvé.</p>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.05);
    }
    
    .ticket-row:hover {
        background-color: rgba(255, 255, 255, 0.01) !important;
    }
    
    .pulse-animation {
        animation: pulse 2s infinite;
    }
    
    @keyframes pulse {
        0% { transform: scale(0.95); box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.7); }
        70% { transform: scale(1); box-shadow: 0 0 0 10px rgba(239, 68, 68, 0); }
        100% { transform: scale(0.95); box-shadow: 0 0 0 0 rgba(239, 68, 68, 0); }
    }
</style>
{% endblock %}
