{% extends 'base.html.twig' %}

{% block title %}Mes Tickets - TicketFlow{% endblock %}

{% block body %}
<div class="container">
    <style>
        @keyframes pulse {
            0% { transform: scale(1); box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.7); }
            70% { transform: scale(1.05); box-shadow: 0 0 0 6px rgba(239, 68, 68, 0); }
            100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(239, 68, 68, 0); }
        }
    </style>
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
        <h1 style="font-size: 2rem; font-weight: 700;">Tickets</h1>
        {% if is_granted('ROLE_AGENT') or is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_tick_ajou') }}" class="btn-action" style="padding: 10px 20px; text-decoration: none;">+ Nouveau Ticket</a>
        {% endif %}
    </div>

    <div style="margin-bottom: 30px;">
        <form action="{{ path('app_tick') }}" method="GET" style="display: grid; grid-template-columns: 2fr 1fr 1fr 1fr auto auto; gap: 15px; align-items: flex-end; background: rgba(255,255,255,0.02); padding: 20px; border-radius: 16px; border: 1px solid rgba(255,255,255,0.05);">
            <div>
                <label style="display: block; font-size: 0.75rem; color: var(--text-muted); margin-bottom: 5px;">Recherche</label>
                <input type="text" name="q" value="{{ filters.q }}" placeholder="Rechercher par titre..." style="width: 100%; background: #0f172a; border: 1px solid rgba(255,255,255,0.1); border-radius: 8px; color: white; padding: 10px;">
            </div>
            <div>
                <label style="display: block; font-size: 0.75rem; color: var(--text-muted); margin-bottom: 5px;">Catégorie</label>
                <select name="category" style="width: 100%; background: #0f172a; border: 1px solid rgba(255,255,255,0.1); border-radius: 8px; color: white; padding: 10px;">
                    <option value="">Toutes</option>
                    {% for cat in categories %}
                        <option value="{{ cat.id }}" {{ filters.category == cat.id ? 'selected' }}>{{ cat.nom }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label style="display: block; font-size: 0.75rem; color: var(--text-muted); margin-bottom: 5px;">Statut</label>
                <select name="statut" style="width: 100%; background: #0f172a; border: 1px solid rgba(255,255,255,0.1); border-radius: 8px; color: white; padding: 10px;">
                    <option value="">Tous</option>
                    <option value="Ouvert" {{ filters.statut == 'Ouvert' ? 'selected' }}>Ouvert</option>
                    <option value="En cours" {{ filters.statut == 'En cours' ? 'selected' }}>En cours</option>
                    <option value="Résolu" {{ filters.statut == 'Résolu' ? 'selected' }}>Résolu</option>
                </select>
            </div>
            <div>
                <label style="display: block; font-size: 0.75rem; color: var(--text-muted); margin-bottom: 5px;">Priorité</label>
                <select name="priorite" style="width: 100%; background: #0f172a; border: 1px solid rgba(255,255,255,0.1); border-radius: 8px; color: white; padding: 10px;">
                    <option value="">Toutes</option>
                    <option value="Basse" {{ filters.priorite == 'Basse' ? 'selected' }}>Basse</option>
                    <option value="Moyenne" {{ filters.priorite == 'Moyenne' ? 'selected' }}>Moyenne</option>
                    <option value="Haute" {{ filters.priorite == 'Haute' ? 'selected' }}>Haute</option>
                </select>
            </div>
            <button type="submit" class="btn-action" style="padding: 10px 25px; height: 42px;">Filtrer</button>
            {% if filters.q or filters.category or filters.statut or filters.priorite %}
                <a href="{{ path('app_tick') }}" style="color: var(--text-muted); font-size: 0.8rem; text-decoration: none; padding-bottom: 12px;">Réinitialiser</a>
            {% endif %}
        </form>
        <div style="margin-top: 10px; font-size: 0.85rem; color: var(--text-muted);">
            {{ tickets|length }} ticket(s) trouvé(s)
        </div>
    </div>

    <div class="card" style="padding: 0; overflow: hidden;">
        <table style="width: 100%; border-collapse: collapse; text-align: left;">
            <thead style="background: rgba(255, 255, 255, 0.03); color: var(--text-muted); font-size: 0.85rem; text-transform: uppercase; letter-spacing: 1px;">
                <tr>
                    <th style="padding: 15px 20px;">ID</th>
                    <th style="padding: 15px 20px;">Titre</th>
                    <th style="padding: 15px 20px;">Statut</th>
                    <th style="padding: 15px 20px;">Priorité</th>
                    <th style="padding: 15px 20px;">Créé le</th>
                    <th style="padding: 15px 20px; text-align: right;">Actions</th>
                </tr>
            </thead>
            <tbody style="font-size: 0.95rem;">
                {% for t in tickets %}
                <tr style="border-top: 1px solid rgba(255, 255, 255, 0.05); transition: background 0.2s;" onmouseover="this.style.background='rgba(255,255,255,0.02)'" onmouseout="this.style.background='transparent'">
                    <td style="padding: 15px 20px; color: var(--primary); font-weight: 600;">#{{ t.id }}</td>
                    <td style="padding: 15px 20px;">
                        <div style="font-weight: 500; display: flex; align-items: center; gap: 8px;">
                            <a href="{{ path('app_tick_show', {'id': t.id}) }}" style="color: white; text-decoration: none; display: flex; align-items: center; gap: 8px;">
                                {{ t.titre }}
                            </a>
                            {% if t.hasUnreadMessagesFor(app.user) %}
                                <span style="background: #ef4444; color: white; font-size: 0.7rem; padding: 2px 8px; border-radius: 10px; font-weight: 700; animation: pulse 2s infinite;">
                                    Nouveau Message
                                </span>
                            {% endif %}
                        </div>
                        <div style="font-size: 0.8rem; color: var(--text-muted);">{{ t.description|slice(0, 50) }}...</div>
                    </td>
                    <td style="padding: 15px 20px;">
                        <span style="padding: 4px 10px; border-radius: 20px; font-size: 0.75rem; font-weight: 600; 
                            background: {{ t.statut == 'Ouvert' ? 'rgba(34, 197, 94, 0.1)' : 'rgba(100, 116, 139, 0.1)' }};
                            color: {{ t.statut == 'Ouvert' ? '#4ade80' : '#94a3b8' }};
                            border: 1px solid {{ t.statut == 'Ouvert' ? 'rgba(34, 197, 94, 0.2)' : 'rgba(100, 116, 139, 0.2)' }};">
                            {{ t.statut|upper }}
                        </span>
                    </td>
                    <td style="padding: 15px 20px;">
                        {% set priority_color = t.priorite|lower == 'haute' ? '#ef4444' : (t.priorite|lower == 'moyenne' ? '#f59e0b' : '#38bdf8') %}
                        <span style="color: {{ priority_color }}; display: flex; align-items: center; gap: 6px;">
                            <span style="width: 8px; height: 8px; border-radius: 50%; background: {{ priority_color }};"></span>
                            {{ t.priorite }}
                        </span>
                    </td>
                    <td style="padding: 15px 20px; color: var(--text-muted);">
                        {{ t.dateCreation ? t.dateCreation|date('d/m/Y') : 'N/A' }}
                    </td>
                    <td style="padding: 15px 20px; text-align: right;">
                        <div style="display: flex; gap: 10px; justify-content: flex-end; align-items: center;">
                            {# Actions spécifiques aux Clients #}
                            {% if is_granted('ROLE_CLIENT') %}
                                {% if t.idClient is null %}
                                    <a href="{{ path('app_tick_acheter', {'id': t.id}) }}" class="btn-action" style="padding: 6px 14px; font-size: 0.8rem; background: #fbbf24; color: #000;">Acheter</a>
                                {% endif %}
                                <a href="{{ path('app_tick_show', {'id': t.id}) }}" class="btn-action" style="padding: 6px 14px; font-size: 0.8rem; background: var(--primary);">Consulter</a>
                            {% endif %}

                            {# Actions spécifiques aux Agents/Admins #}
                            {% if is_granted('ROLE_AGENT') or is_granted('ROLE_ADMIN') %}
                                {% if t.statut == 'Nouveau' %}
                                    <a href="{{ path('app_tick_prendre', {'id': t.id}) }}" class="btn-action" style="padding: 6px 12px; font-size: 0.8rem; background: #38bdf8;">Prendre</a>
                                {% elseif t.statut == 'En cours' %}
                                    <a href="{{ path('app_tick_resoudre', {'id': t.id}) }}" class="btn-action" style="padding: 6px 12px; font-size: 0.8rem; background: #22c55e;">Résoudre</a>
                                {% endif %}
                                
                                <a href="{{ path('app_tick_show', {'id': t.id}) }}" class="btn-action" style="padding: 6px 14px; font-size: 0.8rem; background: var(--primary);">Consulter</a>

                                {# Only Admin or Creator can Edit/Delete #}
                                {% if is_granted('ROLE_ADMIN') or (is_granted('ROLE_AGENT') and t.createur == app.user) %}
                                    <a href="{{ path('app_tick_mod', {'id': t.id}) }}" style="color: var(--primary); text-decoration: none; font-size: 0.9rem;" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="{{ path('app_tick_sup', {'id': t.id}) }}" style="color: #ef4444; text-decoration: none; font-size: 0.9rem;" onclick="return confirm('Supprimer ce ticket ?')" title="Supprimer">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                {% endif %}
                            {% endif %}
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6" style="padding: 40px; text-align: center; color: var(--text-muted);">
                        Aucun ticket pour le moment.
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
