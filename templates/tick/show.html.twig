{% extends 'base.html.twig' %}

{% block title %}Ticket #{{ ticket.id }} - TicketFlow{% endblock %}

{% block body %}
<div class="container">
    <div style="margin-bottom: 30px; display: flex; justify-content: space-between; align-items: flex-start;">
        <div>
            <a href="{{ path('app_tick') }}" style="color: var(--text-muted); text-decoration: none; font-size: 0.9rem; display: flex; align-items: center; gap: 8px;">
                ← Retour à la liste
            </a>
            <h1 style="font-size: 2.2rem; font-weight: 700; margin-top: 15px;">{{ ticket.titre }}</h1>
            <div style="display: flex; gap: 15px; margin-top: 10px; align-items: center;">
                <span style="padding: 4px 12px; border-radius: 20px; font-size: 0.8rem; font-weight: 600; 
                    background: {{ ticket.statut == 'Ouvert' ? 'rgba(34, 197, 94, 0.1)' : (ticket.statut == 'En cours' ? 'rgba(59, 130, 246, 0.1)' : 'rgba(100, 116, 139, 0.1)') }};
                    color: {{ ticket.statut == 'Ouvert' ? '#4ade80' : (ticket.statut == 'En cours' ? '#60a5fa' : '#94a3b8') }};
                    border: 1px solid {{ ticket.statut == 'Ouvert' ? 'rgba(34, 197, 94, 0.2)' : (ticket.statut == 'En cours' ? 'rgba(59, 130, 246, 0.2)' : 'rgba(100, 116, 139, 0.2)') }};">
                    {{ ticket.statut|upper }}
                </span>
                <span style="color: var(--text-muted); font-size: 0.9rem;">Catégorie: <strong>{{ ticket.idCategorie.nom }}</strong></span>
                <span style="color: var(--text-muted); font-size: 0.9rem;">Ticket ID: <strong>{{ ticket.idTicket }}</strong></span>
            </div>
        </div>

        <div style="display: flex; gap: 10px;">
            {% if is_granted('ROLE_CLIENT') and ticket.idClient is null %}
                <a href="{{ path('app_tick_acheter', {'id': ticket.id}) }}" class="btn-action" style="background: #fbbf24; color: #000; padding: 10px 20px; text-decoration: none; border-radius: 8px; font-weight: 700;">ACHETER CE TICKET</a>
            {% endif %}

            {% if (is_granted('ROLE_AGENT') or is_granted('ROLE_ADMIN')) and ticket.idAgent is null %}
                <a href="{{ path('app_tick_claim', {'id': ticket.id}) }}" class="btn-action" style="background: var(--primary); color: white; padding: 10px 20px; text-decoration: none; border-radius: 8px;">Prendre en charge</a>
            {% endif %}
            
            {% if (is_granted('ROLE_AGENT') or is_granted('ROLE_ADMIN')) and ticket.statut != 'Résolu' %}
                <a href="{{ path('app_tick_close', {'id': ticket.id}) }}" class="btn-action" style="background: #ef4444; color: white; padding: 10px 20px; text-decoration: none; border-radius: 8px;">Marquer comme Résolu</a>
            {% endif %}
        </div>
    </div>

    <div style="display: grid; grid-template-columns: 1fr 300px; gap: 30px;">
        {# Chat / Timeline Area #}
        <div>
            <div class="card" style="padding: 30px; margin-bottom: 30px;">
                <h3 style="margin-bottom: 20px; font-size: 1.1rem; color: var(--primary);">Description Initiale</h3>
                <p style="line-height: 1.6; white-space: pre-wrap;">{{ ticket.description }}</p>
                <div style="margin-top: 20px; padding-top: 20px; border-top: 1px solid rgba(255,255,255,0.05); font-size: 0.85rem; color: var(--text-muted);">
                    Posté le {{ ticket.dateCreation|date('d/m/Y H:i') }} par 
                    {% if ticket.idClient %}
                        {{ ticket.idClient.nom }} {{ ticket.idClient.prenom }} (Client)
                    {% else %}
                        {{ ticket.idAgent.nom }} {{ ticket.idAgent.prenom }} (Agent support)
                    {% endif %}
                </div>
            </div>

            <h3 style="margin-bottom: 20px; font-size: 1.2rem;">Discussion</h3>
            
            <div style="display: flex; flex-direction: column; gap: 20px; margin-bottom: 30px;">
                {% for msg in ticket.messages %}
                    {% set is_me = msg.idUtilisateur == app.user %}
                    <div style="display: flex; flex-direction: column; align-items: {{ is_me ? 'flex-end' : 'flex-start' }};">
                        <div style="max-width: 80%; padding: 15px 20px; border-radius: {{ is_me ? '20px 20px 0 20px' : '20px 20px 20px 0' }}; 
                            background: {{ is_me ? 'var(--primary)' : 'rgba(255,255,255,0.05)' }}; border: 1px solid rgba(255,255,255,0.1);">
                            <div style="font-size: 0.8rem; margin-bottom: 5px; opacity: 0.8; font-weight: 600;">
                                {{ msg.idUtilisateur.nom }} {{ msg.idUtilisateur.prenom }} 
                                <span style="font-weight: 400; margin-left: 5px;">• {{ msg.dateMessage|date('H:i') }}</span>
                            </div>
                            <div style="line-height: 1.5;">{{ msg.contenu }}</div>
                        </div>
                    </div>
                {% else %}
                    <div style="text-align: center; color: var(--text-muted); padding: 40px;">Aucun message pour le moment. Soyez le premier à répondre !</div>
                {% endfor %}
            </div>

            {% if ticket.statut != 'Résolu' %}
                <div class="card">
                    <form action="{{ path('app_tick_message', {'id': ticket.id}) }}" method="POST">
                        <textarea name="contenu" rows="4" style="width: 100%; background: rgba(15, 23, 42, 0.5); border: 1px solid rgba(255,255,255,0.1); border-radius: 12px; color: white; padding: 15px; font-family: inherit; margin-bottom: 15px;" placeholder="Écrivez votre réponse ici..."></textarea>
                        <div style="display: flex; justify-content: flex-end;">
                            <button type="submit" class="btn-action" style="padding: 10px 30px; background: var(--primary); border: none; border-radius: 8px; color: white; font-weight: 600; cursor: pointer;">Envoyer le message</button>
                        </div>
                    </form>
                </div>
            {% else %}
                <div style="background: rgba(255, 255, 255, 0.05); text-align: center; padding: 20px; border-radius: 12px; color: var(--text-muted);">
                    Ce ticket est résolu. La discussion est fermée.
                </div>
            {% endif %}
        </div>

        {# Information Sidebar #}
        <div style="display: flex; flex-direction: column; gap: 20px;">
            <div class="card" style="padding: 20px;">
                <h4 style="margin-bottom: 15px; font-size: 0.9rem; text-transform: uppercase; letter-spacing: 1px; color: var(--text-muted);">Détails</h4>
                
                <div style="margin-bottom: 15px;">
                    <div style="font-size: 0.75rem; color: var(--text-muted);">Propriétaire</div>
                    <div style="font-weight: 500;">
                        {% if ticket.idClient %}
                            {{ ticket.idClient.nom }} {{ ticket.idClient.prenom }}
                        {% else %}
                             <span style="color: var(--primary);">Agent Support</span>
                        {% endif %}
                    </div>
                </div>

                <div style="margin-bottom: 15px;">
                    <div style="font-size: 0.75rem; color: var(--text-muted);">Agent Assigné</div>
                    <div style="font-weight: 500;">
                        {% if ticket.idAgent %}
                            {{ ticket.idAgent.nom }} {{ ticket.idAgent.prenom }}
                        {% else %}
                            <span style="color: #ef4444; font-size: 0.85rem;">Non assigné</span>
                        {% endif %}
                    </div>
                </div>

                <div style="margin-bottom: 15px;">
                    <div style="font-size: 0.75rem; color: var(--text-muted);">Priorité</div>
                    {% set priority_color = ticket.priorite|lower == 'haute' ? '#ef4444' : (ticket.priorite|lower == 'moyenne' ? '#f59e0b' : '#38bdf8') %}
                    <div style="color: {{ priority_color }}; font-weight: 600; display: flex; align-items: center; gap: 6px;">
                        <span style="width: 8px; height: 8px; border-radius: 50%; background: {{ priority_color }};"></span>
                        {{ ticket.priorite }}
                    </div>
                </div>

                <div>
                    <div style="font-size: 0.75rem; color: var(--text-muted);">Dernière mise à jour</div>
                    <div style="font-size: 0.9rem;">{{ ticket.dateMise|date('d/m/Y H:i') }}</div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
